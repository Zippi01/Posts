<div class=" alert alert-secondary ">
  <head>
    <h1 align="center">Posts</h1>
  </head>
  <body>
    <% @posts.each do |post| %>
    <div class="list-group-item px-20" style = "border-radius: 10px" >
        <h5>Anthor</h5>
          <%= full_name(post) %>
        <h5>Title</h5>
          <p><%= post.title %></p>
        <h5>Content</h5>
          <p><%= post.content %></p>
        <div class="pjax-container">
          <p class="far fa-eye"> <%= post.impressions_count %></p><br>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <%= link_to 'Show', post , class: 'btn btn-success '%>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-dark'%>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </body>
</div>
